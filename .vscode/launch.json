{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "go",
      "request": "launch",
      "name": "server",
      "mode": "auto",
      "program": "${workspaceFolder}/internal/server",
      "env": {
        "PORT": 8000
      },
      "args": []
    },
    {
      "type": "node",
      "request": "launch",
      "name": "server: nuxt",
      "program": "${workspaceFolder}/web/node_modules/.bin/nuxt-ts",
      "cwd": "${workspaceFolder}/web",
      "outputCapture": "std"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "client",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}/web",
      "runtimeArgs": ["--auto-open-devtools-for-tabs"]
    }
  ],
  "compounds": [
    {
      "name": "FullStack",
      "configurations": ["server", "server: nuxt", "client"]
    }
  ]
}
