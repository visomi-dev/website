{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "go",
      "request": "launch",
      "name": "server",
      "mode": "auto",
      "program": "${workspaceFolder}/server",
      "env": {
        "PORT": 4040,
        "MONGO_DB_URL": ""
      },
      "args": []
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "client",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/web",
      "runtimeArgs": ["--auto-open-devtools-for-tabs"]
    }
  ],
  "compounds": [
    {
      "name": "FullStack",
      "configurations": ["server", "client"]
    }
  ]
}
